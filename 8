import cv2
import matplotlib.pyplot as plt

# Load the image in grayscale
img = cv2.imread('turtle.jpg', cv2.IMREAD_GRAYSCALE)  # Replace 'turtle.jpg' with your actual filename

# Apply Gaussian Blur (optional but recommended before thresholding)
blur = cv2.GaussianBlur(img, (5, 5), 0)

# Apply Otsu's thresholding
ret, otsu_thresh = cv2.threshold(blur, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)

# Display the images using matplotlib
plt.figure(figsize=(10, 4))

plt.subplot(1, 2, 1)
plt.imshow(img, cmap='gray')
plt.title('Original Image')
plt.axis('off')

plt.subplot(1, 2, 2)
plt.imshow(otsu_thresh, cmap='gray')
plt.title(f'Otsu Thresholding (T={ret:.2f})')
plt.axis('off')

plt.tight_layout()
plt.show()
