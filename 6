import cv2

# Load grayscale image
img = cv2.imread('/home/computer/Desktop/daba1.jpg', 0)

# Get the original dimensions
height, width = img.shape

# Define crop dimensions
crop_x = 50
crop_y = 50
crop_width = 180
crop_height = 190

# Crop the image
cropped = img[crop_y:crop_y + crop_height, crop_x:crop_x + crop_width]

# Resize Down
down_width = 100
down_height = 100
resized_down = cv2.resize(img, (down_width, down_height), interpolation=cv2.INTER_LINEAR)

# Resize Up
up_width = width + 50
up_height = height + 50
resized_up = cv2.resize(img, (up_width, up_height), interpolation=cv2.INTER_LINEAR)

# Show all images
cv2.imshow("Original Image", img)
cv2.imshow("Cropped", cropped)
cv2.imshow("Resized Down", resized_down)
cv2.imshow("Resized Up", resized_up)

cv2.waitKey(0)
cv2.destroyAllWindows()
